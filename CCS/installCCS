
#!/bin/bash
#
##
###
##
#
echo $'Welcome to the CCS setup client!\nPlease enter in the username all of the videos and files for the CCDs will be under.'
echo $'It is case sensative so be sure that it is entered in the correct case.'
read user
clear
echo $'Creating the file system.'
sleep 1
sudo mkdir /home/$user/CCS
sudo mkdir /home/$user/CCS/Stores
sudo mkdir /home/$user/CCS/Scripts
sudo mkdir /home/$user/CCS/Logs
sudo mkdir /home/$user/CCS/FPU
sudo touch /home/$user/CCS/TestFile
sudo mkdir /home/$user/CCS/Logs/UpdateLogs
sudo mkdir /home/$user/CCS/Logs/StoreLogs
sudo chmod 777 /home/$user/CCS
sudo chmod 777 /home/$user/CCS/Stores
sudo chmod 777 /home/$user/CCS/Scripts
sudo chmod 777 /home/$user/CCS/Logs
sudo chmod 777 /home/$user/CCS/Logs/StoreLogs
sudo chmod 777 /home/$user/CCS/Logs/UpdateLogs
sudo chmod 777 /home/$user/CCS/FPU
clear
echo $'Setting up stores.'
sleep .5
clear
while [ x=1 ]
  do
      echo $'Enter in a store name.'
      echo $'It is case sensative so be sure that it is entered in the correct case.'
      echo $'Enter in "exC" to finish.'
      read input
      case $input in
            exC)
                  break
                   ;;
              *)
                  sudo mkdir /home/$user/CCS/Stores/$input
                  sudo touch /home/$user/CCS/Stores/$input/update
                  sudo chmod 777 /home/$user/CCS/Stores/$input
                  sudo chmod 777 /home/$user/CCS/Stores/$input/update
                  ;;
      esac
      
echo $'The process has completed.\nFor special features contact Jacob Mock @ deimosoft@gmail.com
done  
